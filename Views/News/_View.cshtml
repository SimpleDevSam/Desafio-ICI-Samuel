@model Desafio_ICI_Samuel.Features.News.ListNews.NewsRow;

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Visualizar Notícia</h5>
        <button type="button" class="btn-close" data-close-news-form aria-label="Close"></button>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <label class="form-label fw-bold">ID</label>
            <div class="form-control-plaintext">@Model.Id</div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Título</label>
            <div class="form-control-plaintext">@Model.Title</div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Texto</label>
            <div class="form-control-plaintext border rounded p-3 bg-light" style="white-space: pre-wrap; min-height: 120px;">@Model.Text</div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Autor</label>
            <div class="form-control-plaintext">@Model.UserName</div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Tags</label>
            <div class="form-control-plaintext">
                <span class="badge bg-primary me-1">@Model.TagsName</span>
            </div>
        </div>
    </div>
</div>